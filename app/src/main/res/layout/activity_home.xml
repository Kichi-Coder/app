<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F1F2"
    tools:context=".HomeActivity">

    <!-- Barra superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009688"
        android:title="Panel principal"
        android:titleTextColor="@android:color/white"
        app:titleCentered="true" />

    <!-- Contenido centrado -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenid@ a tu app"
                android:textColor="#004D40"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Botones -->
            <Button
                android:id="@+id/btnIrPerfil"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ir a Perfil (resultado)"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnAbrirWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir sitio web"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnEnviarCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar correo"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnCompartir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartir texto"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <!-- (Eliminado btnLinterna) -->

            <Button
                android:id="@+id/btnCamara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir C치mara"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnMapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir Mapa"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir Marcador Telef칩nico"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>

            <!-- NUEVO: Configuraci칩n -->
            <Button
                android:id="@+id/btnConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuraci칩n"
                android:backgroundTint="#4DB6AC"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>